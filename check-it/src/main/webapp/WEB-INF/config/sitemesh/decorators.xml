<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/jsp/template">
	
	<!-- 포털 로그인 템플릿 -->
	<decorator name="login" title="포털 로그인" page="portal/loginTemplate.jsp">
		<pattern>/login/*</pattern>
	</decorator>
	
	<!-- 포털 메인 템플릿 -->
	<decorator name="main" title="포털 메인" page="portal/mainTemplate.jsp">
		<pattern>/main/*</pattern>
	</decorator>
	
	<!-- 어드민 로그인 템플릿 -->
	<decorator name="adminLogin" title="어드민 로그인" page="admin/loginTemplate.jsp">
		<pattern>/admin/login/*</pattern>
	</decorator>
		
	<!-- 어드민 메인 템플릿 -->
	<decorator name="adminMain" title="어드민 메인" page="admin/mainTemplate.jsp">
		<pattern>/admin/main/*</pattern>
	</decorator>
	
	<!-- 어드민 기본 템플릿 -->
	<decorator name="adminDefalut" title="어드민" page="admin/defaultTemplate.jsp">
		<pattern>/admin/*</pattern>		
		<pattern>/admin/main/main0109List.do</pattern>
	</decorator>
	
	<!-- 어드민 include -->
	<decorator name="adminHeaderTemplate"  page="admin/include/headerTemplate.jsp"/>
	<decorator name="adminLeftTemplate"    page="admin/include/leftTemplate.jsp"/>
	<decorator name="adminFooterTemplate"  page="admin/include/footerTemplate.jsp"/>
	<decorator name="adminSiteMapTemplate" page="admin/include/siteMap.jsp"/>
	<decorator name="adminLoadingTemplate" page="admin/include/loading.jsp"/>

	<!-- 포털 기본 템플릿 -->
	<decorator name="defalut" title="포털" page="portal/defaultTemplate.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<!-- 포털 include -->
	<decorator name="headerTemplate"  page="portal/include/headerTemplate.jsp"/>
	<decorator name="leftTemplate"    page="portal/include/leftTemplate.jsp"/>
	<decorator name="footerTemplate"  page="portal/include/footerTemplate.jsp"/>
	<decorator name="siteMapTemplate" page="portal/include/siteMap.jsp"/>
	<decorator name="loadingTemplate" page="portal/include/loading.jsp"/>
		
	<!-- 팝업기본 템플릿 -->
	<decorator name="popupDefalut" title="팝업" page="popupTemplate.jsp">
		<pattern>/demo/pop/*</pattern>
		<pattern>/common/*Pop.do</pattern>
		<pattern>/admin/*Pop.do</pattern>
		<pattern>/admin/sale/sale01QuoteKey.do</pattern>
		<pattern>/admin/sale/sale01CustInfo.do</pattern>
		<pattern>/admin/sale/sale01Mrtg.do</pattern>
		<pattern>/admin/wkmn/wkmn0302Pop.do</pattern>
		<pattern>/admin/wkmn/wkmn0302PopEdit.do</pattern>
		<pattern>/admin/wire/wire0102Detail.do</pattern>
		<pattern>/admin/wire/wire0111Detail.do</pattern>
		<pattern>/admin/wire/wire0202PopRemove.do</pattern>
	</decorator>

	<!-- sitemesh를 사용하지 않을 패턴을 지정 -->
	<excludes>
		<pattern>/error/*</pattern>
		<pattern>/common/sendUrl/*</pattern>
		<pattern>/admin/ermn/ermn0105Down.do</pattern>
		<pattern>/admin/ermn/ermn0106Down.do</pattern>
		<pattern>/admin/stat/stat0501Page.do</pattern>
	</excludes>
</decorators>

